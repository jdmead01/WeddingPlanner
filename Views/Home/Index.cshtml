<div class="Mcontainer">
    <div class="box">
        <h4>Wedding Planner</h4>
        <div class="Mmain">
            <div class="register col-6" style="display: inline-block;">
                <h1 style="text-align: center;">Register</h1>
                <form asp-action="Register" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label for="fname">First Name:</label>
                        <span asp-validation-for="User.FirstName" style="color:red;"></span><br>
                        <input type="text" asp-for="User.FirstName" class="form-control"
                            placeholder="Enter your first name">
                    </div>
                    <div class="form-group">
                        <label for="lname">Last Name:</label>
                        <span asp-validation-for="User.LastName" style="color:red;"></span><br>
                        <input type="text" asp-for="User.LastName" class="form-control"
                            placeholder="Enter your last Name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <span asp-validation-for="User.Email" style="color:red;"></span><br>
                        <input type="text" asp-for="User.Email" class="form-control" placeholder="Enter a valid email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <span asp-validation-for="User.Password" style="color:red;"></span><br>
                        <input type="password" asp-for="User.Password" class="form-control"
                            placeholder="Enter a Valid password">
                    </div>
                    <div class="form-group">
                        <label for="cpassword">Confirm Password:</label>
                        <span asp-validation-for="User.Confirm" style="color:red;"></span><br>
                        <input type="password" asp-for="User.Confirm" class="form-control" placeholder="Confirm Password">
                    </div>
                    <div class="button">
                        <button class="btn btn-primary" type="submit">Register</button>
                    </div>
                </form>
            </div>

            <div class="vl" style="border-left: 6px solid green; height: 500px; display: inline-block"></div>

            <div class="login col-4" style="display: inline-block; vertical-align: top;">
                <h1 style="text-align: center;">Sign In</h1>
                <form asp-action="Login" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <p style="color: red;">@Html.ValidationMessage("Email")</p>
                        <input type="text" asp-for="Login.Email" class="form-control" placeholder="Enter a valid email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="text" asp-for="Login.Password" class="form-control"
                            placeholder="Enter a Valid password">
                    </div>
                    <button type="submit" class="btn btn-success">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>